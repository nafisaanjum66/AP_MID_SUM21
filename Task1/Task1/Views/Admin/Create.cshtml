@model Task1.Models.ViewModel.StudentDepartment

@{
    ViewBag.Title = "Create";
}


<h2>Create</h2>

<div class="container body-content">

    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @*@Html.ActionLink("Login tab", "Login", "Admin", new { area = "" }, new { @class = "navbar-brand" })*@
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Students", "Dashboard", "Admin")</li>
                    <li>@Html.ActionLink("Create Students", "Create", "Admin")</li>
                    <li>@Html.ActionLink("Depatments", "Department", "Admin")</li>
                </ul>
            </div>
        </div>
    </div>

    <div>
        <form action="/Admin/Create" method="post">
            <select name="Dept_Id" class="form-control">
                <option value="null" selected disabled>Select Depertment</option>
                @foreach (var c in Model.Departments)
                {
                    <option value="@c.Id">
                        @c.Name
                    </option>
                }
            </select>
            @Html.ValidationMessageFor(model => Model.Dept_Id, "", new { @class = "text-danger" })

            <input type="text" name="Name" class="form-control" placeholder="Name">
            @Html.ValidationMessageFor(model => Model.Name, "", new { @class = "text-danger" })
            <input type="date" name="DOB" class="form-control" placeholder="">
            @Html.ValidationMessageFor(model => Model.DOB, "", new { @class = "text-danger" })
            <input type="text" name="Credit" class="form-control" placeholder="Credits">
            @Html.ValidationMessageFor(model => Model.Credit, "", new { @class = "text-danger" })
            <input type="number" name="CGPA" class="form-control" placeholder="CGPA" step="any">
            @Html.ValidationMessageFor(model => Model.CGPA, "", new { @class = "text-danger" })
            <input type="submit" class="btn btn-block" value="Add" />
        </form>

        <br />
        <form action="/Home/Index" method="post">
            <input type="submit" name="logout" value="Logout" class="btn btn-danger" />
        </form>
    </div>
